<%- include('header') -%>

    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>

    <!-- <li>Code</li>
    <li>Workout</li>
    <li>Read</li>
    <li>Play</li> -->
    <div class="box">
        <% for (let i=0;i<tasks.length;i++){ %>
        <div class="item">
            <input type="checkbox">
            <p><%= tasks[i] %></p>
        </div>
        <% } %>

        <form action="/", method="post" class="item">
            <input type="text" name="task" id="task" placeholder="Enter Task" autocomplete="off">
            <button type="submit" name="list" value="<%= listTitle %>">+</button>
        </form>
    </div>
        
<%- include('footer') -%>