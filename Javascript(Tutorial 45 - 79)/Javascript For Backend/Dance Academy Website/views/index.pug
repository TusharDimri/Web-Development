doctype html
html
    head
        title  Steps Dance Academy
        style
            include ../static/style.css
    body
        nav#navbar
            ul
                div#logo
                    img(src="/static/images/logo.png", alt="Website Logo")
                    p Steps Dance Academy
                li #[a(href="/") Home]
                li #[a(href="/") About]
                li #[a(href="/") Services]
                li #[a(href="/") Class Info]
                li #[a(href="/") Contact]

        section#introSection
            p.first Welcome to Steps Dance Academy
            p.second Eat Sleep Dance Repeat
        section#ourMissionSection
            h2 Our Mission
            div.card
                h3 Dance Perfection
                div.cardBox 
                    div.cardImg
                        img(src="/static/images/1.png", alt="Card Image 1")
                    div.cardContent
                        p Keep Dancing

            div.card
                h3 Dance the way you like
                div.cardBox 
                        div.cardImg
                            img(src="/static/images/2.png", alt="Card Image 2")
                        div.cardContent
                            p Best Dance Academy

            div.card
                h3 Get Fitter
                div.cardBox 
                        div.cardImg
                            img(src="/static/images/3.png", alt="Card Image 3")
                        div.cardContent
                            p Let's Dance
        section#sponsorsSection
            h2 Out Sponsors
            div#sponsors
                img(src="/static/images/sponsor1.png", alt="sponsor1" class="sponsorImage")
                img(src="/static/images/sponsor2.png", alt="sponsor2" class="sponsorImage")
                img(src="/static/images/sponsor3.png", alt="sponsor3" class="sponsorImage")
                img(src="/static/images/sponsor4.png", alt="sponsor4" class="sponsorImage")
        footer#footer 
            h3  &copy Copyright 2020 stepsdanceacademy.com | All rights reserved
        script
            include ../static/index.js