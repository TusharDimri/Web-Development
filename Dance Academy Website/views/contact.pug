extends base.pug

block scripts
    script(src="../static/index.js")

block style
    style
        include ../static/style.css
        include ../static/contact.css

block content
    div.container
        h1 Contact Us
        form(action="/contact", method="post" class="myForm")
            input(type="text", class="myInput", name="name", placeholder="Enter Your Name" @required)
            input(type="tel", class="myInput", name="phone", placeholder="Enter Your Phone Number" @required)
            input(type="email", class="myInput", name="email", placeholder="Enter Your Email ID" @required)
            input(type="address", class="myInput", name="address", placeholder="Enter Your Address" @required)
            input(type="desc", class="myInput", name="desc", placeholder="Enter Your Concern" @required)
            button.btn
                |Submit